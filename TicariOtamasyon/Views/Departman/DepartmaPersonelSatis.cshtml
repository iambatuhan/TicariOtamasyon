@using TicariOtamasyon.Models.Sınıflar
@model List<SatısHareket>
@{
    ViewBag.Title = "DepartmaPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/fonts/StyleSheet1.css" rel="stylesheet" />
<h2>Departma Personel Satis</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Adi:@ViewBag.dpers</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Urun</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var x in Model) { 
    <tr>
        <td>@x.SatisID</td>
        <td>@x.Urun.UrunAd</td>
        <td>@x.Cari.CariAd @x.Cari.CariSoyad</td>
        <td>@x.Fiyat</td>
        <td>@x.Adet</td>

        <td>@x.ToplamTutar</td>
        <td>@x.Tarih</td>
        <td><a href="#" class="custom-btn btn-5" style="text-align:center">Yazdır</a></td>

    </tr>
    
    }
</table>