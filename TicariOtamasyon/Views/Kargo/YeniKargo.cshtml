@model TicariOtamasyon.Models.Sınıflar.KargoDetay 
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>YeniKargo</h2>
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Acıklama)
    @Html.TextBoxFor(x => x.Acıklama, new { @class = "form-control" })
    <br />
    <br />
    @Html.LabelFor(x => x.Personel.PersonelID)
    @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    <br />
    @Html.LabelFor(x => x.Alici)
    @Html.DropDownListFor(x => x.Alici, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
</form>

