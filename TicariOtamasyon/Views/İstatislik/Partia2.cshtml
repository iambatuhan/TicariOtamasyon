@model  IEnumerable<TicariOtamasyon.Models.Sınıflar.SınıfGrup3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Task</th>
                    <th>Progress</th>
                    <th style="width: 40px">Label</th>
                </tr>
            </thead>
            <tbody>
            @{int sayino=0;}
                @foreach (var x in Model)
                {
                <tr>
                    <td>@{sayino++;}@sayino</td>
                    <td>@x.marka</td>
                    <td>
                        <div class="progress progress-xs">
                            <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                        </div>
                    </td>
                    <td><span class="badge bg-danger">@x.sayi</span></td>
                </tr>
              
                }</tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
