@model  IEnumerable<TicariOtamasyon.Models.Sınıflar.SınıfGrup2>
<<div class="card-body p-0">
    <table class="table">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Task</th>
                <th>Progress</th>
                <th style="width: 40px">Label</th>
            </tr>
        </thead>
        <tbody>
            @{int sirano = 0; }
            @foreach (var x in Model)
            {
                <tr>
                    <td>@{sirano++;}@sirano</td>
                    <td>@x.Departman</td>
                    <td>
                        <div class="progress progress-xs">
                            <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                        </div>
                    </td>
                    <td><span class="badge bg-danger">@x.Sayi</span></td>
                </tr>

            }
        </tbody>
    </table>
</div>
 